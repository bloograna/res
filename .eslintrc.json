{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "jquery": true,
    "mocha": true,
    "node": true,
    "phantomjs": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "camelcase": 2,
    "eol-last": 2,
    "no-unused-vars": 2,
    "no-underscore-dangle": 2,
    "no-console": 1,
    "no-undef": 2,
    "no-var": 2,
    "eqeqeq": [2, "always"]
  },
  "globals": {
    "expect": true,
    "mount": true,
    "render": true,
    "shallow": true,
    "sinon": true
  }
}
